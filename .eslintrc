{
    "parser": "babel-eslint",
    "rules": {
        "strict": [
            2,
            "global"
        ],
        "global-strict": [2, "always"],
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-multi-spaces": [1, {
            "exceptions": {
                "VariableDeclarator": true
            }
        }]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "plugins": [
        "react"
    ]
}
